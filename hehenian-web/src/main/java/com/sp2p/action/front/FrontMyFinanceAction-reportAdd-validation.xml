<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="paramMap['title']">
	    <field-validator type="requiredstring">
		    <param name="trim">true</param>
			<message>请填写举报标题</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<message>举报标题长度不得大于${maxLength}个字符</message>
		</field-validator>
	</field>
	<field name="paramMap['content']">
	    <field-validator type="requiredstring">
		    <param name="trim">true</param>
			<message>请填写举报内容</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">500</param>
			<message>举报内容长度不得大于${maxLength}个字符</message>
		</field-validator>
	</field>
	<field name="paramMap['code']">
		<field-validator type="requiredstring">
		    <param name="trim">true</param>
			<message>请填写验证码</message>
		</field-validator>
	</field>
</validators>